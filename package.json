{
  "name": "imeshup",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server --config webpack/dev.config.js --progress",
    "build:prod": "webpack --config webpack/prod.config.js --progress",
    "build:server": "webpack --config webpack/server.config.js --progress",
    "debug-ssr": "node --inspect server.bundle.js", //- chrome node debugging
    "production": "npm run build:prod && npm run build:server && node server.bundle.js"
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "copy-webpack-plugin": "^4.0.1",
    "ejs": "^2.5.6",
    "express": "^4.15.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-hot-loader": "next",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "styled-jsx": "^0.5.7",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "3.19.0",
    "eslint-config-react-app": "^0.6.2",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-flowtype": "2.33.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.4.1",
    "flow-bin": "^0.46.0",
    "html-webpack-plugin": "^2.28.0"
  },
  "babel": {
    "presets": [
      ["env", {"modules": false}],
      "react",
      "stage-0",
      "flow"
    ],
    "plugins": [
      "react-html-attrs",
      "transform-runtime",
      "transform-class-properties",
      "transform-decorators-legacy",
      "styled-jsx/babel",
      "react-hot-loader/babel"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "import/order": "warn",
      "no-duplicate-imports": "warn"
    }
  }
}
